# =============================================================================
# Traza Production Environment Variables
# Copy to .env.production and fill in all required values
# =============================================================================

# --- Database ---
POSTGRES_USER=traza
POSTGRES_PASSWORD=          # REQUIRED: strong password
POSTGRES_DB=traza
DATABASE_URL=postgresql://traza:YOUR_PASSWORD@postgres:5432/traza

# --- Object Storage (S3/MinIO) ---
S3_ENDPOINT=http://minio:9000
S3_BUCKET=traza-documents
S3_REGION=auto
S3_ACCESS_KEY_ID=           # REQUIRED
S3_SECRET_ACCESS_KEY=       # REQUIRED

# --- Authentication ---
JWT_SECRET=                 # REQUIRED: openssl rand -hex 64
JWT_REFRESH_SECRET=         # REQUIRED: openssl rand -hex 64
SIGNING_TOKEN_SECRET=       # REQUIRED: openssl rand -hex 64
PLATFORM_SECRET_KEY=        # REQUIRED: openssl rand -hex 64

# --- URLs ---
APP_URL=https://app.traza.dev
API_URL=https://api.traza.dev

# --- Email ---
RESEND_API_KEY=             # REQUIRED for email sending
EMAIL_FROM=sign@traza.dev

# --- Blockchain (optional) ---
POLYGON_RPC_URL=https://rpc-amoy.polygon.technology
POLYGON_PRIVATE_KEY=
CONTRACT_ADDRESS=

# --- Monitoring ---
SENTRY_DSN=                 # Recommended for production
LOG_LEVEL=info

# --- Runtime ---
NODE_ENV=production
PORT=4000
